<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
<!--
        Vista form de CO Suscripcion
-->
        <record id="view_suscripcion_form" model="ir.ui.view">
            <field name="name">co.suscripcion.form</field>
            <field name="model">co.suscripcion</field>
            <field name="arch" type="xml">
                <form string="Suscripcion" version="7.0">
                    <sheet>
                        <div class="oe_title">
                            <label for="code" class="oe_edit_only"/>
                            <h1>
                                <field name="code" readonly="1"/>
                            </h1>
                            <label for="type"/>
                            <field name="type"/>
                             <label for="date_start"/>
                            <field name="date_start" />
                             <label for="date_end"/>
                            <field name="date_end" />
                             <label for="active"/>
                            <field name="active" />
                            <div>
                                 <label for="suscriptor_id"/>
                                <field name="suscriptor_id" />
                            </div>
                        </div>
                  </sheet>
                </form>
            </field>
        </record>
        
<!--
        Vista tree de CO Solicitud
-->
        <record id="view_suscripcion_tree" model="ir.ui.view">
            <field name="name">co.suscripcion.tree</field>
            <field name="model">co.suscripcion</field>
            <field name="arch" type="xml">
                <tree string="Suscripcion">
                    <field name="code"/>
                   <field name="type"/>
                    <field name="date_start" />
                    <field name="date_end" />
                    <field name="active" />
                    <field name="suscriptor_id" />
                </tree>
            </field>
        </record>
        
        <record id="action_suscripcion" model="ir.actions.act_window">
            <field name="name">Suscripcion</field>
            <field name="res_model">co.suscripcion</field>
            <field name="view_type">form</field>
            <field name="view_mode">form,tree</field>
            <field name="view_id" ref="view_suscripcion_tree" />
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Ac√° se registran las suscripciones
                </p>
            </field>
        </record>
        
        <menuitem action="action_suscripcion" id="id_suscripcion"
                  sequence="5" parent="submenu_multimedia" />
    </data>
</openerp>







